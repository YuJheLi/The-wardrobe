<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jason.mywardrobe.RandomActivity"
    android:id="@+id/randmatch"
    android:background="@drawable/wood_back">

    <ImageView
        android:scaleType="fitXY"
        android:layout_width="204dp"
        android:layout_height="204dp"
        android:id="@+id/randimgtop"
        android:layout_marginTop="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:scaleType="fitXY"
        android:layout_width="204dp"
        android:layout_height="204dp"
        android:id="@+id/randimgbelow"
        android:layout_below="@+id/randimgtop"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="隨機產生搭配"
        android:id="@+id/btn_randmatch"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/btn_saverand"
        android:layout_alignStart="@+id/btn_saverand" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="儲存搭配"
        android:id="@+id/btn_saverand"
        android:layout_below="@+id/randimgbelow"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView6"
        android:layout_alignBottom="@+id/btn_randmatch"
        android:src="@drawable/ic_random"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btn_saverand"
        android:layout_alignEnd="@+id/btn_saverand" />
</RelativeLayout>
